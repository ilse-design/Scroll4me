{
  "manifest_version": 3,
  "name": "Scroll4Me",
  "version": "1.1",
  "description": "Let AI do the doomscrolling, Scroll4Me turns your feed into a protest against brainrot.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.instagram.com/*",
    "https://i.instagram.com/*",
    "https://scontent.cdninstagram.com/*",
    "https://scontent-*.cdninstagram.com/*",
    "https://api.openai.com/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.instagram.com/*"
      ],
      "js": ["content.js"]
    }
  ]
} 